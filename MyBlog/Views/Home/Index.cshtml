<div class="container text-center mt-5">
    <h1 class="display-3 fw-bold text-primary">CV Roaster 101</h1>
    <p class="lead text-muted">Upload your CV and let our advanced AI analyze it for you.</p>

    <div class="card shadow-lg p-5 mt-4 border-0 rounded-4">
        <div class="mb-4">
            <input type="file" id="cvUpload" class="form-control form-control-lg" accept=".pdf,.doc,.docx">
        </div>
        <button class="btn btn-lg btn-dark w-100" onclick="mockUpload()">
            <i class="bi bi-upload"></i> Upload CV
        </button>

        <div id="loading" class="mt-4 text-primary d-none">
            <div class="spinner-border spinner-border-lg" role="status">
                <span class="visually-hidden">Processing...</span>
            </div>
            <p class="mt-3 fw-bold">Analyzing your CV... This might take a while.</p>
            <p class="text-muted">(Our AI is working hard to process your data... Please be patient.)</p>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function mockUpload() {
            document.getElementById('loading').classList.remove('d-none');
            document.getElementById('cvUpload').disabled = true;
        }
    </script>
}